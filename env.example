# Database Configuration
# Not: Bu değerlerin tamamı zorunludur (DB_PASSWORD boş olabilir).
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=beatify

# Application Configuration
SECRET_KEY=please-change-me
FLASK_DEBUG=True

# Cookie / Session Security
# Prod'da COOKIE_SECURE=True önerilir. DEBUG modunda uygulama zaten HTTP için gevşetir.
COOKIE_SECURE=True
COOKIE_HTTPONLY=True
COOKIE_SAMESITE=Lax
COOKIE_MAX_AGE_DAYS=30

# Optional SSL (prod reverse-proxy yoksa)
SSL_CERTFILE=
SSL_KEYFILE=

# scripts/db_reset.py güvenlik kilidi (silme işlemleri için)
BEATIFY_ALLOW_DB_RESET=0

# Spotify OAuth
# Not: Client ID/Secret opsiyonel olabilir (kullanıcı bazlı DB'de tutuluyorsa).
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
# Spotify güvenlik politikası gereği HTTP sadece loopback adreslerinde kabul edilir:
SPOTIFY_REDIRECT_URI=http://127.0.0.1:5000/spotify/callback
